{erl_opts, [
    warn_export_all,
    warn_export_vars,
    warn_untyped_record,
    warn_unused_import,
    warnings_as_errors
]}.

{deps, [
  {hamcrest, ".*",
      {git, "https://github.com/hyperthunk/hamcrest-erlang", {ref, "a8578932014c86fe395982fa3151d48897b9c37f"}}},
  {cowboy,
      {git, "https://github.com/ninenines/cowboy.git", {ref, "8795233"}}},
  {jiffy,
      {git, "https://github.com/davisp/jiffy.git", {tag, "1.0.8"}}},
  { jsx,
      { git, "https://github.com/talentdeficit/jsx.git", { ref, "7c7a69c" }}},
  {gen_smtp,
      {git, "https://github.com/Vagabond/gen_smtp.git", {tag, "1.1.0"}}},
  {meck,
      {git, "https://github.com/eproxus/meck.git", {tag, "0.9.1"}}},
  mzbench_language,
  mzbench_utils,
  {erlcloud,
      {git, "https://github.com/erlcloud/erlcloud.git", {tag, "3.5.1"}}},
  {hdr_histogram,
      {git, "https://github.com/HdrHistogram/hdr_histogram_erl.git", {ref, "0757985" }}}
]}.

{deps_dir, "deps"}.

{lib_dirs, ["deps"]}.

{eunit_opts, [verbose]}.

{minimum_otp_vsn, "17.0"}.

{plugins, [
    %{rebar_rsync_deps, ".*", {git, "https://github.com/ethercrow/rebar3_rsync_resource", {ref, "53eb6aa50db8e0de7cf5833a48e48c205f5c8d56"}}}
]}.

{dialyzer, [
    {warnings, [
        error_handling,
        no_undefined_callbacks,
        race_conditions,
        underspecs,
        unmatched_returns
        ]},
    {plt_extra_apps, [cowboy, cowlib]}
    ]}.

{relx, [
    {release, {mzbench_api, "0.6.0"},
        [mzbench_api,
          erl_interface
        ]},
    {vm_args, "rel/files/vm.args"},
    {sys_config, "rel/files/sys.config"},
    {include_erts, false}, %% Let's use standard installed Erlang from OS.
    {extended_start_script, true}
    ]}.

{pre_hooks, [{"(linux|darwin|solaris)", compile, "sed \"s/{{vsn}}/`cat $REBAR_DEPS_DIR/mzbench_api/priv/version`/g\" \"$REBAR_DEPS_DIR/mzbench_api/priv/http_root/index.html.template\" > \"$REBAR_DEPS_DIR/mzbench_api/priv/http_root/index.html\""}]}.
